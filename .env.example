# KnowLigo - Environment Configuration
# Copy this file to .env and fill with your actual values

# Groq API (Get your free key from: https://console.groq.com/keys)
GROQ_API_KEY=your_groq_api_key_here

# WhatsApp Business Cloud API (Get from: https://developers.facebook.com/apps)
WHATSAPP_TOKEN=your_whatsapp_business_token_here
WHATSAPP_PHONE_NUMBER_ID=your_phone_number_id_here
WHATSAPP_VERIFY_TOKEN=knowligo_webhook_2026

# Response Configuration
MAX_MESSAGE_LENGTH=120
MAX_QUERIES_PER_HOUR=10

# Model Configuration
EMBEDDING_MODEL=all-MiniLM-L6-v2
LLM_MODEL=llama-3.3-70b-versatile
CHUNK_SIZE=500
CHUNK_OVERLAP=50
TOP_K_RETRIEVAL=3

# Database
DATABASE_PATH=database/sqlite/knowligo.db

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
